    <Style x:Key="BusTripPushpinStyle" TargetType="maptk:Pushpin">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Image Source="/Images/BusTrip.png" Width="25" Height="25" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>